DROP TABLE student;

CREATE TABLE student (
    student_id INT AUTO_INCREMENT,
    name VARCHAR(20) ,
    major VARCHAR(20) DEFAULT 'undecided',
    PRIMARY KEY (student_id)
    );

    INSERT INTO student (name,major)VALUES('Jack', 'Biology');  
    INSERT INTO student (name,major)VALUES('Kate','Sociology');  
    INSERT INTO student (name,major)VALUES('Claire','Chemistry');  
    INSERT INTO student (name,major)VALUES('Jack','Biology');  
    INSERT INTO student (name,major)VALUES('Mike','Computer Science');  

    /*
    auto increment -- no need to add student id values 12345.. must specify other values (name,major)
    DEFAULT 'XXX' -- database will put whatever data is in default if no inputs from user
    NOT NULL -- CANNOT BE NULL 
    UNIQUE -- NO TWO SAME DATA IN A ROW
    */
